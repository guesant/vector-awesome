{
  "include": ["./src/**/*"],
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext"],
    "declaration": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
